<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/g_card_background"
    app:cardUseCompatPadding="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageSpecial"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
             />

        <TextView
            android:id="@+id/nameSpecial"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="GÃ¡s"
            app:layout_constraintStart_toEndOf="@id/imageSpecial"
            app:layout_constraintTop_toTopOf="@id/imageSpecial"
            android:layout_marginTop="7dp"
            android:layout_marginStart="18dp"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/specialPrice"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="R$120"
            app:layout_constraintStart_toStartOf="@id/nameSpecial"
            app:layout_constraintTop_toBottomOf="@id/nameSpecial"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:id="@+id/btn_add_to_cart"
            android:layout_width="77dp"
            android:layout_height="25dp"
            android:background="@drawable/blue_background"
            android:fontFamily="sans-serif-light"
            android:text="Carrinho"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/specialPrice"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            />

        <LinearLayout
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/icon_background"
            android:orientation="vertical">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_favorite"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>